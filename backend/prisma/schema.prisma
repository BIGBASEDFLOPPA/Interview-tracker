generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum InterviewStatus {
  PLANNED
  PASSED
  FAILED
  FAKE
}

enum InterviewType {
  HR
  TECH
  LIVE
  OFFER
}

enum TheoryCategory {
  HTML
  CSS
  JS_TS
  FRAMEWORKS
  ALGORITHMS
  OTHER
}

enum TheoryScope {
  FRONTEND
  BACKEND
  FULLSTACK
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())

  interviews      Interview[]
  theoryQuestions TheoryQuestion[]
}

model TheoryQuestion {
  id          Int            @id @default(autoincrement())
  question    String
  answer      String
  category    TheoryCategory
  scope       TheoryScope
  learned     Boolean        @default(false)
  createdAt   DateTime       @default(now())
  userId      Int
  user        User           @relation(fields: [userId], references: [id])
  interviewId Int?
  interview   Interview?     @relation(fields: [interviewId], references: [id])
}

model Interview {
  id             Int                   @id @default(autoincrement())
  title          String
  company        String
  date           DateTime
  status         InterviewStatus
  type           InterviewType
  userId         Int
  user           User                  @relation(fields: [userId], references: [id])
  codingTasks    InterviewCodingTask[]
  createdAt      DateTime              @default(now())
  TheoryQuestion TheoryQuestion[]
}

model CodingTaskTemplate {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  tags        String[]
  createdAt   DateTime @default(now())

  interviewTasks InterviewCodingTask[]
}

model InterviewCodingTask {
  id          Int      @id @default(autoincrement())
  interviewId Int
  templateId  Int
  solution    String?
  completed   Boolean  @default(false)
  createdAt   DateTime @default(now())

  interview Interview          @relation(fields: [interviewId], references: [id], onDelete: Cascade)
  template  CodingTaskTemplate @relation(fields: [templateId], references: [id])

  @@unique([interviewId, templateId])
}
